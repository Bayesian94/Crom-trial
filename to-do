    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- 1. DOM ìš”ì†Œ ì„ íƒ ---
            const todoForm = document.getElementById('todo-form');
            const todoInput = document.getElementById('new-todo-text');
            const dateInput = document.getElementById('new-todo-date');
            const priorityInput = document.getElementById('new-todo-priority');
            const todoList = document.getElementById('todo-list');

            // --- 2. ìƒíƒœ ê´€ë¦¬ (State) ---
            // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì—ì„œ í•  ì¼ ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ê±°ë‚˜, ì—†ìœ¼ë©´ ë¹ˆ ë°°ì—´ë¡œ ì‹œì‘
            let todos = JSON.parse(localStorage.getItem('todos')) || [];

            // --- 3. í•µì‹¬ í•¨ìˆ˜ ---

            /**
             * í˜„ì¬ todos ë°°ì—´ì˜ ìƒíƒœë¥¼ ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥í•©ë‹ˆë‹¤.
             * (ë°ì´í„° ì˜ì†ì„±ì„ ìœ„í•´)
             */
            function saveTodos() {
                localStorage.setItem('todos', JSON.stringify(todos));
            }

            /**
             * ìš°ì„ ìˆœìœ„ ê°’(low, medium, high)ì— ë”°ë¼ CSS í´ë˜ìŠ¤ ì´ë¦„ì„ ë°˜í™˜í•©ë‹ˆë‹¤.
             * @param {string} priority - ìš°ì„ ìˆœìœ„ ê°’
             * @returns {string} CSS í´ë˜ìŠ¤ ì´ë¦„ (ì˜ˆ: 'priority-high')
             */
            function getPriorityClass(priority) {
                switch (priority) {
                    case 'high': return 'priority-high';
                    case 'medium': return 'priority-medium';
                    case 'low': return 'priority-low';
                    default: return 'priority-medium';
                }
            }
            
            /**
             * ìš°ì„ ìˆœìœ„ ê°’(low, medium, high)ì— ë”°ë¼ í•œê¸€ í…ìŠ¤íŠ¸ë¥¼ ë°˜í™˜í•©ë‹ˆë‹¤.
             * @param {string} priority - ìš°ì„ ìˆœìœ„ ê°’
             * @returns {string} í•œê¸€ ìš°ì„ ìˆœìœ„ (ì˜ˆ: 'ë†’ìŒ')
             */
            function getPriorityText(priority) {
                switch (priority) {
                    case 'high': return 'ë†’ìŒ';
                    case 'medium': return 'ë³´í†µ';
                    case 'low': return 'ë‚®ìŒ';
                    default: return 'ë³´í†µ';
                }
            }

            /**
             * todos ë°°ì—´ì„ ê¸°ë°˜ìœ¼ë¡œ í™”ë©´ì— í•  ì¼ ëª©ë¡ì„ ë Œë”ë§(ê·¸ë¦¬ê¸°)í•©ë‹ˆë‹¤.
             */
            function renderTodos() {
                // ëª©ë¡ ë¹„ìš°ê¸° (ì¤‘ë³µ ë Œë”ë§ ë°©ì§€)
                todoList.innerHTML = '';

                // todos ë°°ì—´ì„ ìˆœíšŒí•˜ë©° ê° í•­ëª©ì„ <li> ìš”ì†Œë¡œ ë§Œë“¦
                todos.forEach(todo => {
                    const li = document.createElement('li');
                    li.className = 'todo-item';
                    // ë°ì´í„° IDë¥¼ ì„¤ì •í•˜ì—¬ ë‚˜ì¤‘ì— ì‚­ì œ ì‹œ ì–´ë–¤ í•­ëª©ì¸ì§€ ì‹ë³„
                    li.dataset.id = todo.id; 

                    const priorityClass = getPriorityClass(todo.priority);
                    const priorityText = getPriorityText(todo.priority);
                    
                    // ë‚ ì§œê°€ ì…ë ¥ë˜ì§€ ì•Šì•˜ì„ ê²½ìš° 'ë§ˆê°ì¼ ì—†ìŒ' í‘œì‹œ
                    const displayDate = todo.date || 'ë§ˆê°ì¼ ì—†ìŒ';

                    // <li> ìš”ì†Œì˜ ë‚´ë¶€ HTML êµ¬ì¡° ì„¤ì •
                    li.innerHTML = `
                        <div class="todo-item-content">
                            <p>${todo.text}</p>
                            <div class="todo-item-meta">
                                <span class="due-date">ğŸ“… ${displayDate}</span>
                                <span class="priority-tag ${priorityClass}">${priorityText}</span>
                            </div>
                        </div>
                        <button class="delete-btn" aria-label="í•  ì¼ ì‚­ì œ">Ã—</button>
                    `;

                    // ì™„ì„±ëœ <li>ë¥¼ <ul> ëª©ë¡ì— ì¶”ê°€
                    todoList.appendChild(li);
                });
            }

            /**
             * ìƒˆ í•  ì¼ì„ todos ë°°ì—´ì— ì¶”ê°€í•©ë‹ˆë‹¤.
             * @param {string} text - í•  ì¼ ë‚´ìš©
             * @param {string} date - ë§ˆê°ì¼
             * @param {string} priority - ìš°ì„ ìˆœìœ„
             */
            function addTodo(text, date, priority) {
                const newTodo = {
                    id: Date.now(), // ê³ ìœ  IDë¡œ í˜„ì¬ ì‹œê°„(ms) ì‚¬ìš©
                    text: text,
                    date: date,
                    priority: priority
                };
                
                todos.push(newTodo); // ë°°ì—´ì— ìƒˆ í•  ì¼ ì¶”ê°€
                saveTodos(); // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                renderTodos(); // í™”ë©´ ë‹¤ì‹œ ê·¸ë¦¬ê¸°
            }

            /**
             * IDë¥¼ ê¸°ì¤€ìœ¼ë¡œ todos ë°°ì—´ì—ì„œ í•  ì¼ì„ ì‚­ì œí•©ë‹ˆë‹¤.
             * @param {number} id - ì‚­ì œí•  í•  ì¼ì˜ ID
             */
            function deleteTodo(id) {
                // idê°€ ì¼ì¹˜í•˜ì§€ ì•ŠëŠ” í•­ëª©ë§Œ í•„í„°ë§í•˜ì—¬ ìƒˆ ë°°ì—´ ìƒì„±
                todos = todos.filter(todo => todo.id !== id);
                saveTodos(); // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                renderTodos(); // í™”ë©´ ë‹¤ì‹œ ê·¸ë¦¬ê¸°
            }

            // --- 4. ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì • ---

            /**
             * í¼ ì œì¶œ(í•  ì¼ ì¶”ê°€) ì´ë²¤íŠ¸ ì²˜ë¦¬
             */
            todoForm.addEventListener('submit', (e) => {
                e.preventDefault(); // í¼ ê¸°ë³¸ ë™ì‘(í˜ì´ì§€ ìƒˆë¡œê³ ì¹¨) ë°©ì§€

                const text = todoInput.value.trim();
                const date = dateInput.value;
                const priority = priorityInput.value;

                // í•„ìˆ˜ ê°’(í…ìŠ¤íŠ¸, ìš°ì„ ìˆœìœ„) í™•ì¸
                if (text === '' || priority === '') {
                    alert('í•  ì¼ ë‚´ìš©ê³¼ ìš°ì„ ìˆœìœ„ë¥¼ ëª¨ë‘ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                    return;
                }

                addTodo(text, date, priority);

                // í¼ ì…ë ¥ í•„ë“œ ì´ˆê¸°í™”
                todoInput.value = '';
                dateInput.value = '';
                priorityInput.value = ''; // 'ìš°ì„ ìˆœìœ„ ì„ íƒ'ìœ¼ë¡œ ë¦¬ì…‹
            });

            /**
             * í•  ì¼ ëª©ë¡(ì‚­ì œ ë²„íŠ¼) í´ë¦­ ì´ë²¤íŠ¸ ì²˜ë¦¬ (ì´ë²¤íŠ¸ ìœ„ì„ ì‚¬ìš©)
             * ë¶€ëª¨ ìš”ì†Œ(todoList)ì— ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆë¥¼ í•˜ë‚˜ë§Œ ë“±ë¡í•˜ì—¬
             * ë™ì ìœ¼ë¡œ ìƒì„±ëœ ìì‹ ìš”ì†Œ(ì‚­ì œ ë²„íŠ¼)ì˜ ì´ë²¤íŠ¸ë¥¼ ì²˜ë¦¬í•©ë‹ˆë‹¤.
             */
            todoList.addEventListener('click', (e) => {
                // í´ë¦­ëœ ìš”ì†Œê°€ 'delete-btn' í´ë˜ìŠ¤ë¥¼ ê°€ì¡ŒëŠ”ì§€ í™•ì¸
                if (e.target.classList.contains('delete-btn')) {
                    
                    // í´ë¦­ëœ ë²„íŠ¼ì—ì„œ ê°€ì¥ ê°€ê¹Œìš´ .todo-item ë¶€ëª¨ ìš”ì†Œë¥¼ ì°¾ìŒ
                    const li = e.target.closest('.todo-item');
                    
                    // ë¶€ëª¨ ìš”ì†Œì˜ dataset.id ê°’ì„ ê°€ì ¸ì˜´ (ë¬¸ìì—´ì´ë¯€ë¡œ ìˆ«ìë¡œ ë³€í™˜)
                    const id = Number(li.dataset.id); 
                    
                    deleteTodo(id); // í•´ë‹¹ IDì˜ í•  ì¼ ì‚­ì œ
                }
            });

            // --- 5. ì´ˆê¸°í™” ---
            // í˜ì´ì§€ ë¡œë“œ ì‹œ ì €ì¥ëœ í•  ì¼ ëª©ë¡ ë Œë”ë§
            renderTodos();
        });
    </script>
